}

<div class="left-panel">
    <div class="left-offers">
        Local Resturants/bar offers
    </div>
    <div class="left-toggle">
        <div id="left-toggle-image" onclick="LeftPanel.toggle();"></div>
    </div>
</div>
<div class="center-panel">
    <div id="map-canvas" class="center-map">
    </div>
    <div class="map-selection">
        Map Filters:
        <table>
            <tr>
                <td>
                    Item 1<input type="checkbox" />
                </td>
                <td>
